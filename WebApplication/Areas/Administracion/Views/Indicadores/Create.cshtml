@model WebApplicationMod.indicadores

@using (Html.BeginForm((Model == null ? "Create" : "Update"), "Indicadores", FormMethod.Post, new { @id = "mant-form", @novalidate = "novalidate", role = "form" }))
{
    @Html.AntiForgeryToken()
    @(Model == null ? new MvcHtmlString("") : Html.HiddenFor(p => p.id))


    if (Model == null)
    {

        <div class="box-header with-border">
            <h3 class="box-title">Ingrese la información del nuevo indicador</h3>
        </div>

    }
    else
    {
        <div class="box-header with-border">
            @{
                var fecha = Convert.ToDateTime(Model.FECHA).ToString("dd-MM-yyyy");
            }
            <h3 class="box-title">Editar el indicador con la fecha de : @fecha</h3>
        </div>
                }

                <div class="box-body">
                    <div class="row">
                        <div class="col-md-2">
                            Fecha
                        </div>
                       
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.FECHA, "{0:dd/MM/yyyy}", new { @class = "form-control datefield", @id = "fecha", rows = "2" })
                        </div>
                        <div class="col-md-2">
                            Valor UF
                        </div>
                        <div class="col-md-4">
                          @Html.TextBoxFor(model => model.UF, new { @class = "form-control miles", rows = "2" })
                        </div>
                    </div>
                     <br />
                    <div class="row">
                        <div class="col-md-2">
                            Valor IVP
                        </div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.IVP, new { @class = " form-control miles", rows = "2" })
                        </div>
                        <div class="col-md-2">
                            Valor Dolar
                        </div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.DOLAR, new { @class = "form-control comas", rows = "2" })
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-2">
                            Valor Euro
                        </div>
                        <div class="col-md-4">
                           @Html.TextBoxFor(model => model.EURO, new { @class = "form-control comas", rows = "2" })
                        </div>
                        <div class="col-md-2">
                            Valor ITCM
                        </div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.ITCM, new { @class = "form-control comas", rows = "2" })
                        </div>
                    </div>
                
                </div>
                            <div class="box-footer">
                                <button type="button" class="btn btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
                                <button type="button" class="btn btn-warning pull-right" action="save">Guardar</button>
                            </div>
              

        }

<script>

    $(document).ready(function () {

        setFormulario(
                "mant-form",
                {
                    FECHA: { required: true }
                },
                {
                    FECHA: { required: '<span class="help-block error"><i class="fa fa-warning"></i> Ingrese una Fecha.</span> ' }
                }
        )

        $(".datefield").datepicker
        ({
            autoclose: true,
            format: 'dd-mm-yyyy',
            changeYear: true
        });

        $('.comas').mask("##0,000", { placeholder: "000,000" }, { reverse: true });


        $('.miles').mask("#####,000", { placeholder: "00.000,000" }, { reverse: true });
    });



</script>
