@model IEnumerable<WebApplicationMod.indicadores>


<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title"><i class="fa fa-dollar"></i> Indicadores Económicos</h3>
        <a href="@Url.Action("Create", "Indicadores", new { Area = "Administracion" })" class="btn btn-warning modal-ajax-load pull-right" data-toggle="modal" data-target="#myModal" data-remote="false">Agregar un Indicador</a>
    </div>
</div>

        <div class="table-responsive">
            <div class="box">
                <div class="box-header no-padding">
                    <table id="dt_indicadores" class="table table-bordered table-hover dataTable">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Fecha</th>
                                <th>UF</th>
                                <th>IVP</th>
                                <th>Dolar</th>
                                <th>Euro</th>
                                <th>ITCM</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {

                                    <tr>
                                        <td>
                                            <button class="btn btn-default btn-xs modal-ajax-load" href="@Url.Action("Update", "Indicadores", new { Area = "Administracion", @id=item.id })" data-toggle="modal" data-target="#myModal" data-remote="false"><i class="glyphicon glyphicon-pencil"></i></button>
                                        </td>
                                        <td>@Html.Raw(item.FECHA.ToString("dd-MM-yyyy"))</td>
                                        <td>@Html.DisplayFor(modelItem => item.UF)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IVP)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DOLAR)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EURO)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ITCM)</td>
                                    </tr>
                                }
                            }
                       
                        </tbody>                        
                    </table>

                </div>
            </div>
        </div>

<script type="text/javascript">
    InicializaMantenedor("dt_indicadores");

    $(document).ready(function () {

        setFormulario(
             "mant-form",
             {
                 fecha: { required: true }
             },
             {
                 fecha: { required: '<span class="help-block error"><i class="fa fa-warning"></i> Ingrese una Fecha.</span> ' }
             }
        )

        $(".datefield").datepicker
        ({
            autoclose: true,
            format: 'dd-mm-yyyy',
            changeYear: true
        });
        
    });
</script>
