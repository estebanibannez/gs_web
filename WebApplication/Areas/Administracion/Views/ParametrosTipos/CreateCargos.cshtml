            <div class="col-6 col-md-4 col-xs-8">@Html.TextBoxFor(model => model.nom, new { @class = "form-control", type = "text" })</div>
        </div>

        <div class="row pdddiv">
            <div class="col-12 col-md-8 col-xs-4">Area</div>
