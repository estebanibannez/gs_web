@model IEnumerable<WebApplicationMod.Proveedores>
<section>
    <h3 class="box-title"><i class="glyphicon glyphicon-sunglasses"></i> Proveedor</h3>
    <a href="@Url.Action("Create", "Auxiliares", new { Area = "Administracion" })" class="btn btn-default modal-ajax-load" data-toggle="modal" data-target="#myModal" data-remote="false">Crear un Proveedor</a>
</section>

<br />

<div class="table-responsive">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title"></h3>
        </div>
        <div class="box-header no-padding">
            <table id="dt_basic1" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>Ficha Proveedor</th>
                        <th>Nombre Proveedor</th>
                        <th>Cuenta</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <button class="btn btn-default btn-xs modal-ajax-load" href="@Url.Action("Update", "Auxiliares", new { Area = "Administracion", @id=item.ID })" data-toggle="modal" data-target="#myModal" data-remote="false"><i class="glyphicon glyphicon-pencil"></i></button>
                                    <button class="btn btn-default btn-xs" onclick="confirmDelete('Confirme la Eliminacion @Html.Raw(item.ID) ','@Url.Action("Delete", new { id = item.ID})');"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Aux)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cta)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    InicializaMantenedor("dt_basic1");
    setFormulario();
</script>
