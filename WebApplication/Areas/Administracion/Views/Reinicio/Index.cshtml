@model IEnumerable<WebApplicationMod.Clientes>

<h3 style="background-color:#f7f7f7; font-size: 18px; text-align: left; padding: 7px 10px; margin-top: 0;">
    <i class="glyphicon glyphicon-user" aria-hidden="true"> Reinicio Claves Softland</i>
</h3>

<div class="box-header with-border">    
    <button class="btn btn-warning modal-ajax-load btn-sm pull-right" onclick="confirmActualizar('Confirme el Reinicio de todas sus empresas','@Url.Action("ReinicioPassTodas")');">Reiniciar Clave de todos sus Clientes</button>
</div>


<div class="table-responsive">
    <div class="box">
        <div class="box-header no-padding">
            <table id="dt_Reinicio" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <td>Reinicio Clave</td>
                        <td>Nom Cliente</td>
                        <td>Centro Costo</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    <button class="btn btn-default btn-xs" onclick="confirmActualizar('Confirme el Reinicio @Html.Raw(item.Nom) ','@Url.Action("ReinicioPass", new { id = item.ID})');"><i class="fa fa-unlock"></i> Reiniciar Clave</button>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                                <td>@Html.DisplayFor(modeloItem => item.CC)</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    InicializaMantenedor("dt_Reinicio");
    
</script>
