    ViewBag.Title = "Calendar";
    Random r = new Random();
    var colores = new[] { "#56c4fb", "#1baa06", "#c186ab", "#8e091e",
        "#76ad00", "#061BAA", "#3d06aa","#a9aa06" };
    //int numColor = colores.Length;
}
<style>
    .fc-title {
        white-space: nowrap;
    }title

    .fc-event .fa {
        margin-top: 0;
        margin-right: 5px;
        margin-left: 0;
    }

    #contcalendar {
        padding: 10px 30px 10px 10px;
