@model  WebApplicationMod.GS_HerrApoyo

@using (Html.BeginForm((Model == null ? "Create" : "Update"), "HerramientasApoyo", FormMethod.Post, new { @id = "mant-form", @novalidate = "novalidate", role = "form" }))
{
    @Html.AntiForgeryToken()
    @(Model == null ? new MvcHtmlString("") : Html.HiddenFor(p => p.id))

<div class="box-body">

    <div class="row">

        <div class="row">
            <div class="col-md-6 col-xs-4">Nombre</div>
            <div class="col-md-6 col-xs-8">@Html.TextBoxFor(model => model.nom, new { @class = "form-control", type = "text" })</div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-4">Usuario</div>
            <div class="col-md-6 col-xs-8">@Html.TextBoxFor(model => model.usuario, new { @class = "form-control", type = "text" })</div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xs-4">Password</div>
            <div class="col-md-6 col-xs-8">@Html.TextBoxFor(model => model.pass, new { @class = "form-control", type = "text" })</div>
        </div>

        <div class="box-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal" aria-label="Close">Cancel</button>
            <button type="button" class="btn btn-warning pull-right" action="save">Guardar</button>
        </div>

    </div>

</div>

}

<script>
    $(document).ready(function () {

        setFormulario(
                "mant-form",
                {
                    nom: { required: true }
                },
                {
                    nom: { required: '<span class="help-block error"><i class="fa fa-warning"></i> Ingrese un Nombre.</span> ' }
                }
        )
    });            

</script>
