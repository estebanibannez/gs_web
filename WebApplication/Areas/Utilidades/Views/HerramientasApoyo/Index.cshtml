@model IEnumerable<WebApplicationMod.GS_HerrApoyo>

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title"><i class="glyphicon glyphicon-wrench"></i> Herramientas de apoyo</h3>
        <a href="@Url.Action("Create", "HerramientasApoyo", new { Area = "Utilidades" })" class="btn btn-warning modal-ajax-load btn-sm pull-right" data-toggle="modal" data-target="#myModal" data-remote="false">Agregar heramienta de apoyo</a>
    </div>
</div>

<div class="table-responsive">
    <div class="box">
        <div class="box-header no-padding">
            <table id="dt_apoyo" class="table table-bordered table-hover dataTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>Nombre Herramienta</th>
                        <th>Usuario</th>       
                        <th>pass</th>                      
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <button class="btn btn-default btn-xs modal-ajax-load" href="@Url.Action("Update", "HerramientasApoyo", new { Area = "Utilidades", @id=item.id })" data-toggle="modal" data-target="#myModal" data-remote="false"><i class="glyphicon glyphicon-pencil"></i></button>
                                    <button class="btn btn-default btn-xs" onclick="confirmDelete('Confirme la Eliminacion @Html.Raw(item.id) ','@Url.Action("Delete", new { id = item.id})');"><i class="glyphicon glyphicon-trash"></i></button>
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.nom)</td>
                                <td>@Html.DisplayFor(modelItem => item.usuario)</td>
                                <td>@Html.DisplayFor(modelItem => item.pass)</td>                               
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    InicializaMantenedor("dt_apoyo");
    setFormulario();
</script>
