@using WebApplication.App_GlobalResources;

@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<style>
    
body {
  background: #c7c7c7;
  color: #606468;
  font: 87.5%/1.5em 'Open Sans', sans-serif;
  margin: 0;
