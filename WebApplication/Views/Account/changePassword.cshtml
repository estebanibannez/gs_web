    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Custom styles for this template -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:400,700">
    <link href="~/css/login.css" rel="stylesheet">
    <title>Obtener Acceso al Web GS</title>
</head>
<body>
    <div id="div_padre" class="page-header" style="display:none">
        <div id="msn">
            <span id="span"></span>
        </div>
    </div>
    <div class="container">
        <div id="login">
            <div class="form-signin">
                <h2 class="form-signin-heading"><img src="~/Img/LOGO_PUENTESUR.PNG" class="img-responsive" style="max-width: 300px"></h2>
                @{
                    using (Html.BeginForm("changePassword", "Account", FormMethod.Post, new { @class = "smart-form client-form", role = "form", @novalidate = "novalidate" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <br />
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>                                
                                <input name="usuario" type="text" class="form-control tooltip-test" title="Ingrese su usuario" data-toogle="tooltip" placeholder="Ingrese su Usuario">

                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-block btn-large">Enviar</button>
                    }
                }
            </div>
            <div class="p" style="text-align: center">
                <a href="@Url.Action("Login","Account")"><span>Volver</span></a>
            </div>
        </div>
    </div>
    @Scripts.Render("~/AdminLTE/plugins/jquery/js")
    @Scripts.Render("~/AdminLTE/bootstrap/js")
    @Scripts.Render("~/AdminLTE/plugins/jquery-validate/js")
</body>
</html>
<script type="text/javascript">

    $(document).ready(function () {

        var url = $(location).attr('href');
        var contador = url.length;
        var url_new = url.substring((contador - 2), contador);
        if (url_new === "ok") {
            $('#div_padre').removeAttr("style");
            $('#msn').addClass('alert alert-success');
            $('#span').after().html("<i class='fa-fw fa fa-check'></i><strong>Exito!</strong> Se ha Enviado un correo con su Clave!!!");
        }
        if (url_new === "ko") {
            $('#div_padre').removeAttr("style");
            $('#msn').addClass('alert alert-danger');
            $('#span').after().html("<i class='fa-fw fa fa-check'></i><strong></strong> El Usuario No Existe!!!");
        }

        setTimeout(function () {
            $('#div_padre').hide()
        }, 2000);
    });
</script>