@using WebApplication.App_GlobalResources
@using WebApplication.Extensions
@{  string ruta = (string)ViewBag.rutaPhoto; }

<li class="dropdown user user-menu">

    @if (Request.IsAuthenticated)
    {
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <img src="~/AdminLTE/dist/img/user.svg" class="user-image" alt="User Image">
            <span class="hidden-xs" style="color:white;">@Html.Label(("nomusu"), (string)ViewBag.nomusu, new { @class = "label" })</span>
        </a>

        <ul class="dropdown-menu">
            <li class="user-header">
                <img src="~/AdminLTE/dist/img/user.svg" class="img-circle" alt="User Image">
                <p>
                    <small>@Html.Label(("nomusu"), (string)ViewBag.nomusu)</small>
                </p>
            </li>

            <li class="user-footer">
   @using (Html.BeginForm("LogOff", "Account", new { Area = "" }, FormMethod.Post, new { id = "logoutForm", @class = "" }))
                    {
                <div class="pull-left">
                    <a href="@Url.Action("Perfil", "Account")" class="btn btn-default btn-flat  modal-ajax-load" data-toggle="modal" data-target="#myModal">Perfil</a>
                </div>
                <div class="pull-right">
                    <a href="javascript:document.getElementById('logoutForm').submit()" class="btn btn-default btn-flat">Cerrar Sesión</a>
                </div>
  }
            </li>
        </ul>
    }
    else
    {
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }
</li>
